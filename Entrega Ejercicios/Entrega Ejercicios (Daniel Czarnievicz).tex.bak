%%%% SOLUCIÓN EJERCICIO 1 %%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\begin{exercise}
\textit{Solución} \\

\begin{enumerate}
\item Localización del consumidor marginal:
$$u_i^A(x^*)=u_i^B(x^*) \Rightarrow 10-p_A-tx^*=8-p_B-t(2-x^*) \Rightarrow 2-p_A+p_B+2t=2tx^* \Rightarrow $$
$$\Rightarrow x^*(p_A;p_B) = \frac{2+2t+p_B-p_A}{2t}$$ 

Por lo tanto:
\textcolor{blue}{$$\boxed{x^*(p_A;p_B) = 1 + \frac{2+p_B-p_A}{2t}}$$}

\item Función de demanda por la firma A:
$$q_A(p_A;p_B) = \int_0^{x^*(p_A;p_B)}\! N f_X(x) \di x = N \int_0^{x^*(p_A;p_B)}\! f_X(x) \di x = N \left(F_X(x)\Big|_0^{x^*(p_A;p_B)}\right) = $$
$$= N \left( \frac{x^*(p_A;p_B)}{2} - \frac{0}{2} \right) = \left(\frac{N}{2}\right) x^*(p_A;p_B) = \frac{N}{2} \left(1 + \frac{2+p_B-p_A}{2t}\right)$$

Por lo tanto:
\textcolor{blue}{$$\boxed{q_A(p_A;p_B) = \frac{N}{2} \left(1 + \frac{2+p_B-p_A}{2t}\right)}$$}

\item Función de demanda por la firma B:
$$q_B(p_A;p_B) = \int_{x^*(p_A;p_B)}^2\! N f_X(x) \di x = N \int_{x^*(p_A;p_B)}^2\! f_X(x) \di x = N \left(F_X(x)\Big|_{x^*(p_A;p_B)}^2\right) = $$
$$= N \left(\frac{2}{2} - \frac{x^*(p_A;p_B)}{2}\right) = \left(\frac{N}{2}\right) \Big[ 2 - x^*(p_A;p_B) \Big] = \left(\frac{N}{2}\right) \left[2 - \left(1 + \frac{2+p_B-p_A}{2t}\right)\right] = $$
$$= \left(\frac{N}{2}\right) \left(1 - \frac{2+p_B-p_A}{2t}\right) $$

Por lo tanto:
\textcolor{blue}{$$\boxed{q_B(p_A;p_B) = \frac{N}{2} \left(1 - \frac{2+p_B-p_A}{2t}\right)}$$}

\item Funciones de beneficios de las firmas:
	\begin{enumerate}
	\item Firma A: 
	\textcolor{blue}{$\boxed{\Pi_A = \frac{N}{2} \Big(p_A - c_A \Big) \left(1 + \frac{2+p_B-p_A}{2t}\right)}$}
	\item Firma B: 
	\textcolor{blue}{$\boxed{\Pi_B = \frac{N}{2} \Big(p_B - c_B \Big) \left(1 - \frac{2+p_B-p_A}{2t}\right)}$}
	\end{enumerate}

\newpage

\item Equilibrio de Nash en la competencia vía precios:
	\begin{itemize}
	\item CPO de la firma A:
	$$\frac{\partial \Pi_A}{\partial p_A} = \Big(1+ \frac{2+p_B-p_A}{2t} \Big) + \Big(p_A - c_A \Big) \Big(-\frac{1}{2t}\Big) = 0 \Rightarrow 2t + 2 + p_B - p_A - p_A + c_A = 0$$
	
	Por lo tanto: 
	\textcolor{blue}{$$\boxed{R_A(p_B): p_A = \frac{2t + 2 + p_B+ c_A}{2}}$$}
	
	\item CPO de la firma B:
	$$\frac{\partial \Pi_B}{\partial p_B} = \Big(1 - \frac{2 + p_B - p_A}{2t} \Big) + \Big(p_B - c_B \Big) \Big(-\frac{1}{2t}\Big) = 0 \Rightarrow 2t - 2 - p_B + p_A - p_B + c_B = 0$$
	
	Por lo tanto: 
	\textcolor{blue}{$$\boxed{R_B(p_A): p_B = \frac{2t - 2 + p_A + c_B}{2}}$$}
	
	\item Resolviendo $R_A(p_B) \cap R_B(p_A)$ obtenemos que:
	$$p_A^* = \frac{2t + 2 + c_A}{2} + \frac{1}{2} \Big( \frac{2t - 2 + p_A^* + c_B}{2} \Big) = \frac{3t}{2} + \frac{1}{2} + \frac{c_A}{2} + \frac{p_A^*}{4} + \frac{c_B}{4} \Rightarrow$$
	$$\Rightarrow p_A^* - \frac{p_A^*}{4} = \frac{3t}{2} + \frac{1}{2} + \frac{c_A}{2} + \frac{c_B}{4} \Rightarrow \Big(\frac{3}{4} \Big) p_A^* = \frac{6t + 2 + 2c_A + c_B}{4} \Rightarrow$$
	$$\Rightarrow p_A^* = \frac{4}{3} \Big( \frac{6t + 2 + 2c_A + c_B}{4} \Big)$$

	De donde obtenemos que:
\textcolor{blue}{$$\boxed{p_A^* = \frac{6t + 2 + 2c_A + c_B}{3}}$$}
	
	Remplazando en $p_B$ obtenemos:
	$$p_B^* = \frac{2t - 2 + c_B}{2} + \frac{p_A^*}{2} = \frac{2t - 2 + c_B}{2} + \frac{1}{2} \Big( \frac{6t + 2 + 2c_A + c_B}{3} \Big) = $$
	$$= \frac{2t - 2 + c_B}{2} + \frac{6t + 2 + 2c_A + c_B}{6} = \frac{6t - 6 + 3c_B + 6t + 2 + 2c_A + c_B}{6} $$
	
	De donde obtenemos que:
	\textcolor{blue}{$$\boxed{p_B^* = \frac{6t - 2 + c_A + 2c_B}{3}}$$}
	
	\newpage
	
	\item Remplazando $p_A^*$ y $p_B^*$ en $q_A(p_A;p_B)$ y $q_B(p_A;p_B)$, obtenemos:
	$$q_A^*(p_A^*;p_B^*) = \frac{N}{2} \Big( 1 + \frac{2}{2t} + \frac{6t + 2 + 2c_A + c_B}{6t} - \frac{6t - 2 + c_A + 2c_B}{6t} \Big) = $$
	$$= \frac{N}{2} \Big( 1 + \frac{2}{2t} + \frac{-4 - c_A + c_B}{6t}\Big) = \frac{N}{2} \Big( \frac{6t + 2 - c_A + c_B}{6t}\Big) \Rightarrow$$
	$$\Rightarrow \color{blue}\boxed{q_A^*(p_A^*;p_B^*) = \frac{N}{2} \Big( \frac{6t + 2 - c_A + c_B}{6t}\Big)}$$
	$$q_B^*(p_A^*;p_B^*) = \frac{N}{2} \Big( 1 - \frac{2}{2t} + \frac{6t + 2 + 2c_A + c_B}{6t} - \frac{6t - 2 + c_A + 2c_B}{6t} \Big) = $$
	$$= \frac{N}{2} \Big( 1 - \frac{2}{2t} + \frac{4 + c_A - c_B}{6t}\Big) = \frac{N}{2} \Big( \frac{6t - 2 + c_A - c_B}{6t}\Big) \Rightarrow$$
	$$\Rightarrow \color{blue}\boxed{q_B^*(p_A^*;p_B^*) = \frac{N}{2} \Big( \frac{6t - 2 + c_A - c_B}{6t}\Big)}$$
	
	\item Luego, utilizando los datos del problema ($c_A=3$, $c_B=1$, y $t=1$), obtenemos que:
	
	\begin{center}
		\begin{tabular}{c | c | c | c}
		& $p_j^*$ & $q_j^*$ & $\Pi_j^*$ \\
		\hline
		Firma A & $5$ & $1000$ & $2000$ \\
		\hline
		Firma B & $3$ & $1000$ & $2000$ \\
		\end{tabular}
	\end{center}
	
	\end{itemize}
\item Matriz de elasticidades
$$
\begin{bmatrix}
\frac{\partial q_A(p_A;p_B)}{\partial p_A} \cdot \frac{p_A^*}{q_A^*} & \frac{\partial q_A(p_A;p_B)}{\partial p_B} \cdot \frac{p_B^*}{q_A^*} \\[1.5em]
\frac{\partial q_B(p_A;p_B)}{\partial p_A} \cdot \frac{p_A^*}{q_B^*} & \frac{\partial q_B(p_A;p_B)}{\partial p_B} \cdot \frac{p_B^*}{q_B^*}
\end{bmatrix}
=
\begin{bmatrix}
-\frac{5}{2} & \frac{3}{2} \\[1.5em]
\frac{5}{2} & -\frac{3}{2}
\end{bmatrix}
=
\begin{bmatrix}
-2.5 & 1.5 \\[1.5em]
2.5 & -1.5
\end{bmatrix}
$$

Por lo tanto:
	\begin{itemize}
	\item $-\infty < \varepsilon^A_{p_A} < -1 \Rightarrow$ la firma A se encuentra en el tramo elástico de la demanda.
	\item $-\infty < \varepsilon^B_{p_B} < -1 \Rightarrow$ la firma B se encuentra en el tramo elástico de la demanda.
	\item $\varepsilon^A_{p_A} < \varepsilon^B_{p_B} \Rightarrow$ el bien A es más elástico que el bien B en el equilibrio.
	\item $\varepsilon^i_{p_j} > 0 \Rightarrow$ los bienes son sustitutos.
	\end{itemize}
\end{enumerate}
\end{exercise}

